
def main():
    # get user input
    myInput = input("What is your favorite color? \nA. blue \nB. red \nC. yellow ")
    # check if input is valid
    if myInput.lower() not in ('a', 'b', 'c'):
        print("invalid input! Please try again.")
        main()
    else:
        print("You said: " + myInput)

main()